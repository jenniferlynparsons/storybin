<section class="section">
  <div class="container">
    <p id="notice">
      <%= notice %>
    </p>
    <h1 class="title">
      <%= @user.first_name + " " + @user.last_name %>
    </h1>
  </div>
</section>

<section class="section">
  <div class="container">
    <div class="columns">
      <div class="column is-one-quarter">
        <p>
          <strong>Email:</strong>
          <%= @user.email %>
        </p>


      </div>
    </div>
  </div>
</section>

<section class="section">
  <div class="container">
    <div class="columns">
      <div class="column">
        <h2>Stories</h2>
        <table class="table">
          <thead>
            <tr>
              <th>Title</th>
              <th>Author</th>
              <th>File</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @user.works.each do |work| %>
              <tr>
                <td>
                  <%= work.title %>
                </td>
                <td>
                  <%= work.author %>
                </td>
                <td>
                  <%= work.file %>
                </td>
                <td>
                  <%= link_to 'Show', work %>
                </td>
                <td>
                  <%= link_to 'Edit', edit_work_path(work) %>
                </td>
                <td>
                  <%= link_to 'Destroy', work, method: :delete, data: { confirm: 'Are you sure?' } %>
                </td>
              </tr>
              <% end %>
          </tbody>
        </table>


      </div>
    </div>
  </div>
</section>