<section class="section">
  <div class="container">
    <p id="notice">
      <%= notice %>
    </p>

    <h1 class="title">Submissions</h1>
    <%= link_to 'New Submission', new_submission_path, class:"button is-primary" %>
  </div>
</section>
<section class="section">
  <div class="container">
    <table class="table">
      <thead>
        <tr>
          <th>Title</th>
          <th>Active</th>
          <th>Simultaneous</th>
          <th>Reprint</th>
          <th>Reprint date</th>
          <th>Status</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @submissions.each do |submission| %>
          <tr>
            <td>
              <%= submission.cover_letter %>
            </td>
            <td>
              <%= submission.active %>
            </td>
            <td>
              <%= submission.simultaneous %>
            </td>
            <td>
              <%= submission.reprint %>
            </td>
            <td>
              <%= submission.reprint_date %>
            </td>
            <td>
              <%= submission.status %>
            </td>
            <td>
              <%= link_to 'Show', submission %>
            </td>
            <td>
              <%= link_to 'Edit', edit_submission_path(submission) %>
            </td>
            <td>
              <%= link_to 'Destroy', submission, method: :delete, data: { confirm: 'Are you sure?' } %>
            </td>
          </tr>
          <% end %>
      </tbody>
    </table>

  </div>
</section>