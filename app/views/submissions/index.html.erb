<%- title 'New Submission'%>
  <section class="section">
    <div class="container">
      <%= link_to 'New Submission', new_submission_path, class:"button is-primary" %>
        <table class="table">
          <thead>
            <tr>
              <th>Title</th>
              <th>Active</th>
              <th>Simultaneous</th>
              <th>Reprint</th>
              <th>Reprint date</th>
              <th>Status</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @submissions.each do |submission| %>
              <tr>
                <td>
                  <%= submission.cover_letter %>
                </td>
                <td>
                  <%= submission.active %>
                </td>
                <td>
                  <%= submission.simultaneous %>
                </td>
                <td>
                  <%= submission.reprint %>
                </td>
                <td>
                  <%= submission.reprint_date %>
                </td>
                <td>
                  <%= submission.status %>
                </td>
                <td>
                  <span class="icon">
                    <%= link_to '', submission, class:'button is-link is-small fas fa-eye', alt:'View Submission' %>
                  </span>
                </td>
                <td>
                  <span class="icon">
                    <%= link_to '', edit_submission_path(submission), class:'button is-success is-small fas fa-pen', alt:'Edit Submission' %>
                  </span>
                </td>
                <td>
                  <span class="icon">
                    <%= link_to '', submission, class:'button is-danger is-small fas fa-times', alt:'Delete Submission', method: :delete, data: { confirm: 'Are you sure?' } %>
                  </span>
                </td>
              </tr>
              <% end %>
          </tbody>
        </table>

    </div>
  </section>