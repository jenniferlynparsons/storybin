<%- title "Issue #{@issue.number}" %>
  <section class="section">
    <div class="container">
      <div class="columns">
        <div class="column is-one-quarter">
          <div class="card">
            <div class="card-content">
              <div class="content">
                <ul>
                  <li>
                    Start date:
                    <%= @issue.start_date.strftime("%B %d, %Y") %>
                  </li>
                  <li>
                    End date:
                    <%= @issue.end_date.strftime("%B %d, %Y") %>
                  </li>
                  <li>
                    Publish date:
                    <%= @issue.pub_date.strftime("%B %d, %Y") %>
                  </li>
                  <li>
                    Activity:
                    <% if @issue.active == true %>
                      Open
                      <% else %>
                        Closed
                        <% end %>
                  </li>
                </ul>
              </div>
            </div>
          </div>
          <div class="buttons">
            <%= link_to 'Edit', edit_issue_path(@issue), class:"button is-primary" %>
              <%= link_to 'Back', issues_path, class:"button is-primary" %>
          </div>
        </div>
      </div>
    </div>
  </section>